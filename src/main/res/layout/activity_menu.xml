
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:gravity="center"

android:weightSum="1">

<ImageButton
    android:layout_width="match_parent"
    android:layout_height="177dp"
    android:id="@+id/imageButton1"
    android:onClick="EventButton1"
    android:src="@drawable/killerwhale"
    android:scaleType="centerCrop" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="177dp"
        android:id="@+id/imageButton2"
        android:onClick="EventButton1"
        android:src="@drawable/event1alaska"
        android:scaleType="centerCrop" />

<Button
    android:id="@+id/camera_button"
    android:layout_width="240px"
    android:layout_height="wrap_content"
    android:text="camera"
    android:onClick="OnCameraButtonClick"
    android:layout_gravity="center_horizontal" />

<Button
    android:id="@+id/gallery_button"
    android:layout_width="240px"
    android:layout_height="wrap_content"
    android:text="gallery"
    android:onClick="OnGalleryButtonClick"/>

<Button
    android:id="@+id/map_button"
    android:layout_width="240px"
    android:layout_height="wrap_content"
    android:text="map"
    android:onClick="OnMapButtonClick"/>

<Button
    android:id="@+id/scoresheet_button"
    android:layout_width="240px"
    android:layout_height="wrap_content"
    android:text="scoresheet"
    android:onClick="OnScoresheetButtonClick"/>
</LinearLayout>